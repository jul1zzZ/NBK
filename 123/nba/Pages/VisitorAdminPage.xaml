<Page x:Class="nba.Pages.VisitorAdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:nba.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1000"
      Title="Main Screen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="300 50">
            <Button  x:Name="VisitorBtn" Content="Visitor" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="80 0"  Foreground="White" Background="CornflowerBlue" Click="VisitorBtn_Click" Width="75" Height="30"/>
            <Button x:Name="AdminBtn" Content="Admin" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Background="CornflowerBlue" Width="75" Height="30"/>
        </StackPanel>
    </Grid>
</Page>
